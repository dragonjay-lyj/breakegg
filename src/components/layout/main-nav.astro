---
import { cn, extractSegmentURL } from "@/lib/utils";
import type { MainNavItem } from "@/types";

type Props = {
  items: MainNavItem[];
};

const { items } = Astro.props;
const segment = extractSegmentURL(Astro.url.pathname);
---

{
  items?.length ? (
    <nav class="hidden space-x-4 md:flex">
      {items?.map((item) => (
        <a
          href={item.disabled ? "#" : item.href}
          class={cn(
            "flex items-center justify-center rounded-lg px-4 py-2 text-lg font-medium transition-colors duration-300 hover:text-primary dark:hover:text-secondary",
            item.href.startsWith(`/${segment}`) ? "text-primary" : "text-gray-600 dark:text-gray-400",
            item.disabled && "cursor-not-allowed opacity-80"
          )}
        >
          {item.title}
        </a>
      ))}
    </nav>
  ) : null
}