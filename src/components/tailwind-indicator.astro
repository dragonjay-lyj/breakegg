---
const isDev = import.meta.env.DEV;
---

{isDev && (
  <div class="fixed bottom-2 left-2 z-50 flex space-x-1 items-center justify-center rounded-full bg-gray-800 p-2 shadow-lg">
    <div class="block text-xs text-white sm:hidden">xs</div>
    <div class="hidden text-xs text-white sm:block md:hidden">sm</div>
    <div class="hidden text-xs text-white md:block lg:hidden">md</div>
    <div class="hidden text-xs text-white lg:block xl:hidden">lg</div>
    <div class="hidden text-xs text-white xl:block 2xl:hidden">xl</div>
    <div class="hidden text-xs text-white 2xl:block">2xl</div>
  </div>
)}
