---
import { cn } from "@/lib/utils";

import { Image } from "astro:assets";
interface Props {
  src: string;
  alt: string;
  width: number;
  height: number;
  className?: string;
}
const { src, alt, className, height, width, ...attrs } = Astro.props;
---

<Image
  class:list={cn(
    "w-full h-full object-cover rounded-md overflow-hidden border border-gray-200 shadow-sm hover:shadow-lg transition-shadow duration-300 ease-in-out",
    className
  )}
  width={width}
  height={height}
  src={src}
  alt={alt}
/>
